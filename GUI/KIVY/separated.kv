<MyGrid>

    #<VAR_IN_PYTHON>: <ID>
    name: names
    last: lasts
    email: emails

    GridLayout:
        cols: 1
        size: root.width - 200, root.height - 200
        pos: 100, 100

        GridLayout:
            cols: 2

            Label:
                #text: "First kv file"
                text: "Name: "

            TextInput:
                id: names
                multiline: False

            Label:
                text: "LastName: "

            TextInput:
                id: lasts
                multiline: False

            Label:
                text: "Email: "

            TextInput:
                id: emails
                multiline: False

        Button:
            text: "Submit"
            on_press: root.btn()
